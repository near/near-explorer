    "@types/autobahn": "^18.10.0",
    "@types/bn.js": "^4.11.6",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.12.39",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-test-renderer": "^16.9.0",
    "autoprefixer": "^9.8.0",
    "babel-jest": "^26.0.1",
    "babel-plugin-inline-react-svg": "^1.1.0",
    "cypress": "^4.5.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
