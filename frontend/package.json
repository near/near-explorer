{
  "name": "near-explorer",
  "version": "0.0.1",
  "description": "NEAR blockchain explorer",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "npm run typecheck && jest",
    "dev": "next",
    "dev:local-wamp": "env WAMP_NEAR_EXPLORER_URL=ws://localhost:8080/ws npm run dev",
    "dev:production-wamp-testnet": "env 'NEAR_NETWORKS=[{\"name\": \"testnet\", \"explorerLink\": \"http://localhost:3000/\", \"aliases\": [\"localhost:3000\", \"127.0.0.1:3000\"]}]' WAMP_NEAR_EXPLORER_URL=wss://near-explorer-wamp.onrender.com/ws npm run dev",
    "dev:production-wamp-betanet": "env 'NEAR_NETWORKS=[{\"name\": \"betanet\", \"explorerLink\": \"http://localhost:3000/\", \"aliases\": [\"localhost:3000\", \"127.0.0.1:3000\"]}]' WAMP_NEAR_EXPLORER_URL=wss://near-explorer-wamp.onrender.com/ws npm run dev",
    "dev:production-wamp-devnet": "env 'NEAR_NETWORKS=[{\"name\": \"devnet\", \"explorerLink\": \"http://localhost:3000/\", \"aliases\": [\"localhost:3000\", \"127.0.0.1:3000\"]}]' WAMP_NEAR_EXPLORER_URL=wss://near-explorer-wamp.onrender.com/ws npm run dev",
    "build": "next build",
    "start": "next start",
    "start:local-wamp": "env WAMP_NEAR_EXPLORER_URL=ws://localhost:8080/ws npm run start",
    "start:production-wamp-testnet": "env 'NEAR_NETWORKS=[{\"name\": \"testnet\", \"explorerLink\": \"http://localhost:3000/\", \"aliases\": [\"localhost:3000\", \"127.0.0.1:3000\"]}]' WAMP_NEAR_EXPLORER_URL=wss://near-explorer-wamp.onrender.com/ws npm run start",
    "start:production-wamp-betanet": "env 'NEAR_NETWORKS=[{\"name\": \"betanet\", \"explorerLink\": \"http://localhost:3000/\", \"aliases\": [\"localhost:3000\", \"127.0.0.1:3000\"]}]' WAMP_NEAR_EXPLORER_URL=wss://near-explorer-wamp.onrender.com/ws npm run start",
    "start:production-wamp-devnet": "env 'NEAR_NETWORKS=[{\"name\": \"devnet\", \"explorerLink\": \"http://localhost:3000/\", \"aliases\": [\"localhost:3000\", \"127.0.0.1:3000\"]}]' WAMP_NEAR_EXPLORER_URL=wss://near-explorer-wamp.onrender.com/ws npm run start",
    "e2e:test": "npm start & cypress run",
    "e2e": "cypress run",
    "e2e:chrome": "cypress run --browser chrome",
    "e2e:record": "cypress run --record",
    "e2e:record:parallel": "cypress run --record --parallel",
    "cy:verify": "cypress verify",
    "cy:version": "cypress version",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:ci": "start-server-and-test start:production-wamp-testnet 3000 cy:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearprotocol/near-explorer.git"
  },
  "author": "Near Inc <hello@nearprotocol.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/nearprotocol/near-explorer/issues"
  },
  "homepage": "https://github.com/nearprotocol/near-explorer#readme",
  "dependencies": {
    "@types/enzyme": "^3.10.3",
    "autobahn": "19.7.3",
    "bn.js": "^5.1.1",
    "bootstrap": "^4.5.0",
    "hexy": "^0.3.0",
